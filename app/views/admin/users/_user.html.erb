<tr class="user" id="user-<%= user.id %>">
  <th scope="row"><%= user.id %></th>
  <td class="user-name"><%= link_to user.name, admin_user_path(user.id) %></td>
  <td class="user-email text-truncate" style="max-width: 350px;"><%= user.email %></td>
  <td class="user-created-at text-center"><%= user.created_at.strftime("%Y-%m-%d") %> </td>
  <td class="user-admin text-center"><%= user.admin %> </td>
  <td class="user-missions-count text-center"><%= user.missions_count %> </td>
  <td class="user-edit text-center"><%= link_to t("admin.users.table.edit"), edit_admin_user_path(user.id) %> </td>
  <td class="user-destroy text-center"><%= link_to t("admin.users.table.destroy"), admin_user_path(user.id), method: "delete", data: {confirm: "Are you sure"} %> </td>
</tr>