<div class="row my-3">
  <h3 class="col text-center"><%= t("missions.new.title") %></h3>
</div>
<div class="row justify-content-center">
  <%= form_for(@mission, url: missions_path, method: "post") do |f| %>
    <div class="form-group">
      <%= f.label t("missions.table.name") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label t("missions.table.content") %>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
      
      <%= f.label t("missions.table.deadline") %>
      <%= select_date Date.today, start_year: Date.today.year, prefix: :deadline, class: "form-control" %>
  
      <%= label_tag :no_deadline, t("missions.table.no_deadline") %>
      <%= check_box_tag :no_deadline, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("missions.table.priority") %>
      <%= f.select :priority, [[t("missions.table.priority_level.low"), "low"], [t("missions.table.priority_level.medium"), "medium"], [t("missions.table.priority_level.high"), "high"] ], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit t("missions.table.create"), class: "form-control btn btn-primary" %>
    </div>
  <% end %>
</div>
