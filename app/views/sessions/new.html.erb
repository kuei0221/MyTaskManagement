<div class="row my-3">
  <h3 class="col text-center"><%= t("sessions.new.title") %></h3>
</div>
<div class="row justify-content-center">
  <%= form_for(:session, url: sessions_path, method: "post") do |f| %>
    <div class="form-group">
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    
    <div class="form-group">
      <%= f.submit t("sessions.new.submit"), class: "form-control btn btn-primary" %>
    </div>

    <div class="form-group">
      <p class="text-center"><%= t("sessions.new.divider")%></p>
      <%= link_to t("sessions.new.signup"), new_user_path, class: "form-control btn btn-primary" %>
    </div>
  <% end %>
</div>
  